<RowTitleSub Text="Дивиденды" />

<div class="row icard-content small">
    <div class="col">
        <div class="row text-info text-nowrap">
            <div class="col-7">
                <div class="row">
                    <div class="col">Компания</div>
                </div>
            </div>
            <div class="col-5">
                <div class="row">
                    <div class="col-6 px-0">Сумма</div>
                    <div class="col-6 px-0 text-center">Дата</div>
                </div>
            </div>
        </div>

        @foreach (var dividend in Dividends)
        {
            <div class="row text-@Color.ToString()">
                <div class="col-7">
                    <div class="row">
                        <div class="col">@dividend.Company</div>
                    </div>
                </div>
                <div class="col-5">
                    <div class="row">
                        <div class="col-6 px-0">@dividend.Amount</div>
                        <div class="col-6 px-0 text-center">@dividend.DateOperation</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public IEnumerable<BrokerDividend> Dividends { get; set; }
    [Parameter] public Choice.Color Color { get; set; } = Choice.Color.success;
}
