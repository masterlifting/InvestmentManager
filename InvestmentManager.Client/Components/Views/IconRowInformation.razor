<div class="row small">
    <div class="col-1 px-0 text-center">
        <span class="oi oi-@IconName" aria-hidden="true"></span>
    </div>
    <div class="col-10 py-1"> @Name </div>
    <div class="col-1 px-0 text-center">
        <IconInformation Title="@Name" Text="@Description" />
    </div>
</div>

@code {
    [Parameter] public string IconName { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string Name { get; set; }
}
