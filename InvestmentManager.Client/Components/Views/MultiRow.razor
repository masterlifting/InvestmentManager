<div class="row small">
    <div class="col-11">
        <div class="row ilink align-items-center" @onclick="Action">
            <div class="col-1 px-0 text-center"><span class="oi oi-@IconName" aria-hidden="true"></span></div>
            <span class="col-11 py-1"> @Name </span>
        </div>
    </div>
    <div class="col-1 px-0 text-center">
        <IconInformation Title="@Name" Text="@Description" />
    </div>
</div>

@code {
    [Parameter] public string IconName { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public EventCallback Action { get; set; }
}
