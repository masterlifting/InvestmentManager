<div class="row">
    <div class="col h6 text-@Position.ToString() text-@Color.ToString() text-monospace mb-0">@Text</div>
</div>
<div class="dropdown-divider"></div>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public ColorType Color { get; set; } = ColorType.info;
    [Parameter] public PositionType Position { get; set; } = PositionType.right;
}
