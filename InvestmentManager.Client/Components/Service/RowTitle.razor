<div class="row">
    <div class="col text-@Position.ToString() text-@Color.ToString() mb-0 font-weight-bold">@Text.ToUpper()</div>
</div>
<div class="dropdown-divider"></div>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public Choices.Color Color { get; set; } = Choices.Color.info;
    [Parameter] public Choices.Position Position { get; set; } = Choices.Position.right;
}
