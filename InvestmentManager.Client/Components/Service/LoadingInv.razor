@if (IsLoading)
{
    <div class="d-flex justify-content-center fixed-top mt-2" style="z-index:99999999">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsLoading { get; set; } = false;
}
