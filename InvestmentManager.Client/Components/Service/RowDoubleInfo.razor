
<div class="row p-1">
    <div class="col-12 col-md-6 font-weight-bold">@Title</div>
    <div class="col-12 col-md-6 text-@Color.ToString() text-right text-md-left">@Value</div>
</div>

@code {
    [Parameter] public Choice.Color Color { get; set; } = Choice.Color.light;
    [Parameter] public string Title { get; set; }
    [Parameter] public string Value { get; set; }
}
