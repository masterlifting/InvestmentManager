@inject CustomHttpClient http
<InfoTemplate InfoName="@InfoName" VisibleAction="@(async (bool isVisible) => await UpdateVisible.InvokeAsync(isVisible))">
    <ChildContent>
        <InformationCols Key="Date Update" Value="@model.DateUpdate" />
        <InformationCols KeySize="9" Key="Recommendation price for buying" Value="@model.Price" />
    </ChildContent>
</InfoTemplate>

@code{
    [Parameter] public EventCallback<bool> UpdateVisible { get; set; }
    [Parameter] public string InfoName { get; set; }
    [Parameter] public long CompanyId { get; set; }

    RecommendationsForBuyingShortModel model = new RecommendationsForBuyingShortModel();

    protected async override Task OnInitializedAsync() =>
        model = await http.GetResultAsync<RecommendationsForBuyingShortModel>(RouteName.recommendation + "recommendation/buyshort", CompanyId);
}