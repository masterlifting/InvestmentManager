@inject CustomHttpClient http
<InfoTemplate InfoName="@InfoName" VisibleAction="@(async (bool isVisible) => await UpdateVisible.InvokeAsync(isVisible))">
    <ChildContent>
        <InformationCols KeySize="6" Key="Date Update" Value="@model.DateUpdate" />
        <InformationCols KeySize="6" Key="Buy if the price is less" Value="@model.Price" />
    </ChildContent>
</InfoTemplate>

@code{
    [Parameter] public EventCallback<bool> UpdateVisible { get; set; }
    [Parameter] public string InfoName { get; set; }
    [Parameter] public long CompanyId { get; set; }

    RecommendationsForBuyShortModel model = new RecommendationsForBuyShortModel();

    protected async override Task OnInitializedAsync() =>
        model = await http.GetByIdAsync<RecommendationsForBuyShortModel>(RouteName.recommendation + "/buyshort", CompanyId);
}