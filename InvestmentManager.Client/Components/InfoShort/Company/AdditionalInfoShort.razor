@inject CustomHttpClient http

<InfoTemplate InfoName="@InfoName" VisibleAction="@(async (bool isVisible) => await UpdateVisible.InvokeAsync(isVisible))">
    <ChildContent>
        <InformationCols Key="Sector" Value="@model.Sector" />
        <InformationCols Key="Industry" Value="@model.Industry" />
        <InformationCols Key="Currency" Value="@model.Currency" />
    </ChildContent>
</InfoTemplate>

@code{
    [Parameter] public EventCallback<bool> UpdateVisible { get; set; }
    [Parameter] public string InfoName { get; set; }
    [Parameter] public long CompanyId { get; set; }

    CompanyAdditionalInfoShortModel model = new CompanyAdditionalInfoShortModel();

    protected async override Task OnInitializedAsync() => 
        model = await http.GetResultAsync<CompanyAdditionalInfoShortModel>(RouteName.company + "/additionalshort", CompanyId);
}

