<div class="container">

    <div class="row text-center flex-md-nowrap text-muted mb-2">
        <div class="col-4">Год</div>
        <div class="col-4">Месяц</div>
        <div class="col-4">
            <div class="row">
                <div class="col-lg-9">Удержано</div>
                <div class="col-lg-3">Валюта</div>
            </div>
        </div>
    </div>

    @foreach (var i in Model.OrderByDescending(x => x.Year).ThenByDescending(x => x.Month))
    {
        <div class="row text-center mb-2 hoverView">
            <div class="col-4">@i.Year</div>
            <div class="col-4">@i.Month</div>
            <div class="col-4">
                <div class="row">
                    <div class="col-lg-9">@i.Sum</div>
                    <div class="col-lg-3">@i.CurrencyType</div>
                </div>
            </div>
        </div>
    }
</div>