@model AccountTransactionErrorForm

<form class="container-fluid" method="post" asp-controller="portfolio" asp-action="@nameof(PortfolioController.AccountTransactionErrorHandler)" asp-antiforgery="true">
    <div class="row justify-content-around">
        <div class="col">
            <div class="form-group">
                <label asp-for="AccountName"></label>
                <input class="form-control" asp-for="AccountName" autocomplete="off"/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-right">
            <button type="submit" class="btn btn-outline-primary text-dark">Сохранить</button>
        </div>
    </div>
</form>
