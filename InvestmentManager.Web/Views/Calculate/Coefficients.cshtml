@model ICollection<CoefficientModel>
@{ string name;}

<div class="row pt-2 pb-2 text-center text-monospace text-danger">
    <div class="col-4 col-lg-5 hover">
        #<svg class="bi bi-chevron-bar-expand" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3.646 10.146a.5.5 0 0 1 .708 0L8 13.793l3.646-3.647a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 0-.708zm0-4.292a.5.5 0 0 0 .708 0L8 2.207l3.646 3.647a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 0 0 0 .708zM1 8a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 8z" />
        </svg>
    </div>
    <div class="col-4 col-lg-3 hover">
        #<svg class="bi bi-chevron-bar-expand" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3.646 10.146a.5.5 0 0 1 .708 0L8 13.793l3.646-3.647a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 0-.708zm0-4.292a.5.5 0 0 0 .708 0L8 2.207l3.646 3.647a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 0 0 0 .708zM1 8a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 8z" />
        </svg>
    </div>
    <div class="col-4 col-lg-4 hover">
        #<svg class="bi bi-chevron-bar-expand" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3.646 10.146a.5.5 0 0 1 .708 0L8 13.793l3.646-3.647a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 0-.708zm0-4.292a.5.5 0 0 0 .708 0L8 2.207l3.646 3.647a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 0 0 0 .708zM1 8a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 8z" />
        </svg>
    </div>
</div>


<div class="container-fluid">

    @foreach (var i in Model)
    {
        name = i.CompanyName.Replace(" ", "");
        <div class="row mb-2">
            <div class="col-12 col-lg-6 bg-secondary rounded-pill text-monospace pl-lg-5 hover" onclick="ShowFoundCoefficient('_@name')">@i.CompanyName</div>
        </div>

        <div id="_@name" style="display:none">

            <div class="row text-center flex-md-nowrap text-muted">
                <div class="col-4">
                    <div class="row">
                        <div class="col-4">Год</div>
                        <div class="col-4">Квартал</div>
                        <div class="col-4">Закредитованность</div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row">
                        <div class="col-4">PB</div>
                        <div class="col-4">PE</div>
                        <div class="col-4">EPS</div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="row">
                        <div class="col-4">ROA</div>
                        <div class="col-4">ROE</div>
                        <div class="col-4">Доходность</div>
                    </div>
                </div>
            </div>

            @foreach (var j in i.Coefficients)
            {
                <div class="row text-center flex-md-nowrap">
                    <div class="col-4">
                        <div class="row">
                            <div class="col-4">@j.Year</div>
                            <div class="col-4">@j.Quarter</div>
                            <div class="col-4">@j.DebtLoad</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-4">@j.PB</div>
                            <div class="col-4">@j.PE</div>
                            <div class="col-4">@j.EPS</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-4">@j.ROA</div>
                            <div class="col-4">@j.ROE</div>
                            <div class="col-4">@j.Profitability</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>